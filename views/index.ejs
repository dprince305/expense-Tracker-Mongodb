<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Expense Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="bg-info">
    <!-- form section -->
    <section style="padding-top: 100px; padding-bottom: 100px;">
        <div class="container" style="background-color: #fff; width: 760px; padding-bottom: 50px;">
            <div class="row">
                <div class="d-flex justify-content-center align-items-center">
                    <h1 class="text-uppercase text-start py-5">Expense Tracker</h1>
                </div>
            </div>
            <div>
                <div class="d-flex">
                    <div class="col-12">
                        <div class="formTag p-4" style="background-color: #D6E7FF;">
                            <form action="/expenseCon" method="post">
                                <!-- type / category -->
                                <div class="d-flex">
                                    <div class="col-6 px-3 my-2">
                                        <label for="name" class="form-label">Type</label>
                                        <input type="text" class="form-control" name="type">
                                    </div>
                                    <div class="col-6 my-2">
                                        <label for="lastName" class="form-label">
                                            Category
                                        </label>                                         <select name="category" class="form-control" width="400px">
                                            <option value="Food">Food</option>
                                            <option value="Rent">Rent</option>
                                            <option value="Salary">Salary</option>
                                            <option value="Travel">Travel</option>
                                            <option value="Health">Health</option>
                                            <option value="Other">Other</option>
                                         </select>
                                    </div>
                                </div>
                                <!-- description / date -->
                                <div class="d-flex">
                                    <div class="col-6 px-3">
                                        <label for="number" class="form-label">description</label>
                                        <input type="text" class="form-control" name="description">
                                    </div>
                                    <div class="col-6">
                                        <label for="email" class="form-label">date</label>
                                        <input type="date" class="form-control" name="date">
                                    </div>
                                </div>
                                <!-- amount -->
                                <div class="d-flex">
                                    <div class="col-6 px-3 my-2">
                                        <label for="address" class="form-label">amount</label>
                                        <input type="number" class="form-control" name="amount">
                                    </div>
                                    <div class="col-6 my-2">
                                    </div>
                                </div>
                                <!-- submit -->
                                <div class="d-flex justify-content-center mt-5">
                                    <button type="submit" class="btn btn-outline-primary px-5 py-2 fs-5">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- view section -->
    <section>
        <div class="container">
            <h2 class="my-5 fs-1 text-center text-uppercase">Expense Tracker views section</h2>
            <table align="center" width="800px" class="table table-dark table-striped">
                <thead class="table  table-striped">
                    <tr class="text-center fs-5">
                        <th scope="col">#ID</th>
                        <th scope="col">Type</th>
                        <th scope="col">Category</th>
                        <th scope="col">Description</th>
                        <th scope="col">Date</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% dataList.forEach((item, index)=>{ %>
                        <tr class="text-center">
                            <th scope="row">
                                <%= index + 1 %>
                            </th>
                            <td>
                                <%= item.type %>
                            </td>
                            <td>
                                <%= item.category %>
                            </td>
                            <td>
                                <%= item.description %>
                            </td>
                            <td>
                                <%= item.date %>
                            </td>
                            <td>
                                <%= item.amount %>
                            </td>
                            <td>
                                <a href="/editCon/<%= item._id %>" class="btn  btn-outline-primary mx-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-pencil-square" viewBox="0 0 16 16">
                                        <path
                                            d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                        <path fill-rule="evenodd"
                                            d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                    </svg>
                                </a>
                                <a href="/deleteCon/<%= item._id %>" class="btn btn-outline-danger mx-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-trash3" viewBox="0 0 16 16">
                                        <path
                                            d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
                                    </svg>
                                </a>
                            </td>
                        </tr>
                        <% })%>
                </tbody>
            </table>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>