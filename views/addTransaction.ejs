<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Expense Tracker Edite</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="bg-dark">
    <!-- form section -->
    <section style="padding-top: 100px; padding-bottom: 100px;">
        <div class="container" style="background-color: #fff; width: 760px; padding-bottom: 50px;">
            <div class="row">
                <div class="d-flex justify-content-center align-items-center">
                    <h1 class="text-uppercase text-start py-5">Expense Tracker</h1>
                </div>
            </div>
            <div>
                <div class="d-flex">
                    <div class="col-12">
                        <div class="formTag p-4" style="background-color: #D6E7FF;">
                            <form action="/updateCon/<%= editeData._id %>" method="post">
                                <!-- type / category -->
                                <div class="d-flex">
                                    <input type="text" value="<%= editeData._id%>" hidden>
                                    <div class="col-6 px-3 my-2">
                                        <label for="name" class="form-label">Type</label>
                                        <input type="text" class="form-control" name="type" value="<%= editeData.type %>">
                                    </div>
                                    <div class="col-6 my-2">
                                        <label for="lastName" class="form-label">Category</label>     
                                        <select name="category" value="<%= editeData.category %>" class="form-control" width="400px">
                                            <option value="Food">Food</option>
                                            <option value="Rent">Rent</option>
                                            <option value="Salary">Salary</option>
                                            <option value="Travel">Travel</option>
                                            <option value="Health">Health</option>
                                            <option value="Other">Other</option>
                                         </select>
                                    </div>
                                </div>
                                <!-- description / date -->
                                <div class="d-flex">
                                    <div class="col-6 px-3">
                                        <label for="number" class="form-label">description</label>
                                        <input type="text" class="form-control" name="description" value="<%= editeData.description %>">
                                    </div>
                                    <div class="col-6">
                                        <label for="email" class="form-label">date</label>
                                        <input type="date" class="form-control" name="date" value="<%= editeData.date %>">
                                    </div>
                                </div>
                                <!-- amount -->
                                <div class="d-flex">
                                    <div class="col-6 px-3 my-2">
                                        <label for="address" class="form-label">amount</label>
                                        <input type="number" class="form-control" name="amount">
                                    </div>
                                    <div class="col-6 my-2">
                                    </div>
                                </div>
                                <!-- submit -->
                                <div class="d-flex justify-content-center mt-5">
                                    <button type="submit" class="btn btn-outline-primary px-5 py-2 fs-5">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>